
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        $.ajax({
            url: "/ProjectManage/Order/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
        var selectOption = $("#P_ProductId").children('option:selected');
        $("#P_DrawingNoOrModelNo").val(selectOption.attr("draw"));
    });
    function initControl() {
        $("#F_EnabledMark").bindSelect()
        $("#P_CustomerId").bindSelect({
            url: "/ProjectManage/Customer/GetTreeSelectJson"
        });
        $("#P_ProductId").bindSelect({
            url: "/ProjectManage/Product/GetTreeSelectJson"
        });
        $("#P_OrderOwner").bindSelect({
            url: "/SystemManage/User/GetGroupUserJson"
        });
        $("#P_OrderStatus").bindSelect({
            url: "/ProjectManage/Order/GetOrderFlowJson"
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            <li><a href="javascript:void()">扩展信息</a></li>
            <li><a href="javascript:void()">登录日志</a></li>
            <li><a href="javascript:void()">操作日志</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">客户名称</th>
                    <td class="formValue">
                        <select id="P_CustomerId" name="P_CustomerId" class="form-control required" disabled="disabled">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">订单编号</th>
                    <td class="formValue">
                        <input id="P_OrderCode" name="P_OrderCode" type="text" class="form-control required" placeholder="请输入订单编号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品名称</th>
                    <td class="formValue">
                        <select id="P_ProductId" name="P_ProductId" class="form-control required" disabled="disabled">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">图号/型号</th>
                    <td class="formValue">
                        <input id="P_DrawingNoOrModelNo" name="P_DrawingNoOrModelNo" type="text" class="form-control required" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">交货日期</th>
                    <td class="formValue">
                        <input id="P_DeliveryDate" name="P_DeliveryDate" type="text" class="form-control required" readonly="readonly" />
                    </td>
                    <th class="formTitle">订单数量</th>
                    <td class="formValue">
                        <input id="P_OrdreNumber" name="P_OrdreNumber" type="text" class="form-control required" placeholder="请输入订单数量" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">订单单价</th>
                    <td class="formValue">
                        <input id="P_OrderPrice" name="P_OrderPrice" type="text" class="form-control required" />
                    </td>
                    <th class="formTitle">订单单位</th>
                    <td class="formValue">
                        <select id="P_OrderUnit" name="P_OrderUnit" class="form-control" disabled="disabled">
                            <option value="件">件</option>
                            <option value="套">套</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">执行人</th>
                    <td class="formValue">
                        <select id="P_OrderOwner" name="P_OrderOwner" class="form-control required" disabled="disabled">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">订单状态</th>
                    <td class="formValue">
                        <select id="P_OrderStatus" name="P_OrderStatus" class="form-control" disabled="disabled">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">是否外协</th>
                    <td class="formValue">
                        <select id="P_IsOutsourcing" name="P_IsOutsourcing" class="form-control" disabled="disabled">
                            <option value="0">否</option>
                            <option value="1">是</option>
                        </select>
                    </td>
                    <th class="formTitle"></th>
                    <td class="formValue">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

